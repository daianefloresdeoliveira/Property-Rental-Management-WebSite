@model FinalProject_PRMS_ASPNetEntityFrameworkMVC.Models.Property

@{
    ViewBag.Title = "Edit House";
}

<h2>Edit House</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Address)
        @Html.EditorFor(model => model.Address) 
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.City)
        @Html.EditorFor(model => model.City) 
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsActive)
        @Html.EditorFor(model => model.IsActive)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.House.LotSize)
        @Html.EditorFor(model => model.House.LotSize) 
    </div>



    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

    <div class="form-actions">
        <a href="@Url.Action("Index", "ManagerDashboard")" class="btn btn-default">Go Back</a>
    </div>
}
