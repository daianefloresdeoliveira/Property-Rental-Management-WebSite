
@{
    ViewBag.Title = "Apartments List";
}



<h2>List of Apartments to manage:</h2>
<a href="@Url.Action("CreateApartment", "ManagerDashboard")">Add new Apartment</a>

<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Address</th>
            <th>City</th>
            <th>Status</th>
            <th>IsActive?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model)
        {
            <tr>
                <td>@property.PropertyType</td>
                <td>@property.Address</td>
                <td>@property.City</td>
                <td>@(property.IsActive ? "Ativo" : "Inativo")</td>
                <td>
                    <a href="@Url.Action("EditApartment", "ManagerDashboard", new { id = property.PropertyId })">Edit</a> |
                    <a href="@Url.Action("DeleteApartments", "ManagerDashboard", new { id = property.PropertyId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "ManagerDashboard")" class="btn btn-primary">Back to Dashboard</a>


