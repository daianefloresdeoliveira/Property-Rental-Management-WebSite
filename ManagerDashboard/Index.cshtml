@{
    ViewBag.Title = "Manager Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/manager-dashboard.css">
</head>
<body>

    <div class="dashboard-container">       
        <div class="sidebar">
            <div class="sidebar-header">
                <h3>Manager Dashboard</h3>
            </div>
            <ul class="sidebar-menu">
                <li><a href="@Url.Action("Index", "ManagerDashboard")"><i class="fas fa-home"></i> Home</a></li>
                <li><a href="@Url.Action("ApartmentsList", "ManagerDashboard")"><i class="fas fa-building"></i> Apartments/Condos/Buildins</a></li>
                <li><a href="@Url.Action("HousesList", "ManagerDashboard")"><i class="fas fa-bed"></i> Houses e TownHouses</a></li>
                <li><a href="@Url.Action("StatusProperties", "ManagerDashboard")"><i class="fas fa-tasks"></i> Status</a></li>
                <li><a href="@Url.Action("Schedules", "ManagerDashboard")"><i class="fas fa-calendar-check"></i> Schedules</a></li>
                <li><a href="@Url.Action("Messages", "ManagerDashboard")"><i class="fas fa-envelope"></i> Messages</a></li>
                <li><a href="@Url.Action("Reports", "ManagerDashboard")"><i class="fas fa-flag"></i> Reports</a></li>
                <li>@Html.ActionLink("Logout", "Logout", "ManagerDashboard", null, new { @class = "fas fa-sign-out-alt" })</li>
            </ul>
        </div>
       
        <div class="main-content">
            <header class="header">
                <div class="header-left">
                    @if (Session["UserName"] != null)
                    {
                        <h2 class="welcome-message">Welcome back, @Session["UserName"]!</h2> 
                    }
                    else
                    {
                        <h2 class="welcome-message">Welcome!</h2> 
                    }
                </div>
               
            </header>

            <section class="stats">
                <div class="stat-card">
                    <h4>Total Houses</h4>
                    <p>@ViewBag.TotalHouses</p>
                </div>
                <div class="stat-card">
                    <h4>Total Apartments</h4>
                    <p>@ViewBag.TotalApartments</p>
                </div>
                <div class="stat-card">
                    <h4>Total Properties</h4>
                    <p>@ViewBag.TotalProperties</p>
                </div>

            </section>

            <section class="recent-activity">
                <h3>Recent Activity</h3>
                <div class="activity-card">
                    <h4>New Appointment Scheduled</h4>
                    <p>Appointment for Apartment 101 has been scheduled.</p>
                    <span class="time">5 minutes ago</span>
                </div>
                <div class="activity-card">
                    <h4>New Message</h4>
                    <p>Tenant John Doe has sent a message regarding Apartment 202.</p>
                    <span class="time">2 hours ago</span>
                </div>
            </section>
        </div>
    </div>

</body>
</html>