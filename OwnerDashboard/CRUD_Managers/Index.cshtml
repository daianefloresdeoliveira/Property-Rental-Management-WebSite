@model IEnumerable<FinalProject_PRMS_ASPNetEntityFrameworkMVC.Models.User>

<h2>Managers</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.UserId)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
        <th>@Html.DisplayNameFor(model => model.LastName)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.UserId)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>

            <td>
                @Html.ActionLink("Edit", "EditManager", "OwnerDashboard", new { id = item.UserId }, null) |
                @Html.ActionLink("Details", "DetailsManager", "OwnerDashboard", new { id = item.UserId }) |
                @Html.ActionLink("Delete", "DeleteManager", new { id = item.UserId }, null)
            </td>
        </tr>
    }
</table>


    <div class="form-actions no-color">
        <input type="submit" value="<= Go back" class="btn btn-default" /> |
        @Html.ActionLink("Home", "Index")
    </div>

