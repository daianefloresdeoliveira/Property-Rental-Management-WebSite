@{
    ViewBag.Title = "Make Appointment";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Schedule an Appointment</h1>

    <section class="appointment-form p-4 border rounded shadow-sm bg-light">
        <form method="post" action="@Url.Action("MakeAppointment", "TenantDashboard", new { id = ViewBag.PropertyId })">
           
            <div class="form-group mb-3">
                <label for="appointmentDate" class="form-label">Choose a Date:</label>
                <input type="date" id="appointmentDate" name="appointmentDate" class="form-control" required />
            </div>
           
            <div class="form-group mb-3">
                <label for="message" class="form-label">Message:</label>
                <textarea id="message" name="message" class="form-control" placeholder="Enter your message here..." rows="4" required></textarea>
            </div>
           
            <div class="d-flex gap-3 flex-wrap">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="@Url.Action("Details", "TenantDashboard", new { id = ViewBag.PropertyId })" class="btn btn-secondary">Cancel</a>
                <a href="@Url.Action("SearchProperties", "TenantDashboard")" class="btn btn-outline-dark">Back to Search Properties</a>
            </div>
        </form>
    </section>
</div>
